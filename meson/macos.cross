[constants]

arch = 'llvm-'

[binaries]

c  = 'clang'
c_ld = 'lld'
strip = arch + 'strip'

[host_machine]

system = 'darwin'
cpu_family = 'aarch64'
cpu = 'arm64'
endian = 'little'

[built-in options]

c_std = 'c99'
optimization = 's'
warning_level = '3'